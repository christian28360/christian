{% extends "src/Bowling/Resources/views/layout.html.twig" %}

{% set menu = 'Tournois' %}
{% set titre = 'tournoi' %}
{% set route = 'bowling-tournoi' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ menu }}</li>
    <li>Consultation</li>
    {% endblock %}

{% block content %}
    <h3>Consultation de{{ nbRecords > 0 ? 's' : ''}}  {{ records|length }} {{ titre }}{{ nbRecords > 0 ? 's' : ''}} 
        <small>
            {% include 'app/Resources/views/fragments/ajoutRecord.html.twig' with {'genre': 'm', 'titre': titre, } %}
        </small>
    </h3>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>MàJ</th>
                    <th>T.<br />Joué</th>
                    <th>Date<br />1er tour</th>
                    <th>Date<br />tournoi</th>
                    <th>Commentaire</th>
                    <th>Type</th>
                    <th>Prix</th>
                    <th>Date lim.<br />inscript.</th>
                    <th>Date<br />inscript.</th>
                    <th>Lieu</th>
                    <th>Organisateur</th>
                    <th>Fin./Ok</th>
                    <th>Moy.</th>
                    <th>Class.</th>
                </tr>
            </thead>
            <tbody>
                {# pour chaque tournoi #}
                {% for tournoi in records %}
                    <tr title="Double click pour modifier la ligne"
                        id="{{ tournoi.id }}"
                        >
                        <td class="text-center">
                            <a href="{{ path(route ~ '-update', {'id' : tournoi.id} ) }}"
                               title="Modifier le tournoi"
                               alt="Modifier le tournoi" >
                                <span class="glyphicon glyphicon-pencil">&nbsp;
                                </span>
                            </a>
                            <a href="{{ path(route ~ '-delete', {'id' : tournoi.id} ) }}"                           class            =   "supprimer-journee"
                               title="Suppression du tournoi"
                               alt="Suppression du tournoi"
                               >
                                <span class="glyphicon glyphicon-trash">&nbsp;</span>
                            </a>
                        </td>
                        {#                        <td>{{ tournoi.id }}</td>#}
                        <td class="text-center"
                            title="tounoi joué">
                            {% if tournoi.journee is not null %}
                                <span class="glyphicon glyphicon-ok"></span>
                            {% endif %}
                        </td>
                        <td class="text-right">
                            {{ tournoi.dateDebutTournoi is null ? '-' : tournoi.dateDebutTournoi|strftime('%a %d/%m/%Y %H:%M')  }}
                        </td>
                        <td class="text-center">
                            {{ tournoi.dateTournoi is null ? '-' : tournoi.dateTournoi|strftime('%d/%m/%y')  }}
                        </td>
                        <td>{{ tournoi.commentaire }}</td>
                        <td>{{ tournoi.type }}</td>
                        <td class="text-right">
                            {{ tournoi.prix is null ? '' : tournoi.prix|number_format(2, ',', ' ') }}
                        </td>
                        <td class="text-center">
                            {{ tournoi.dateLimiteInscription is null ? '-' : tournoi.dateLimiteInscription|date('d/m/y') }}
                        </td>
                        <td class="text-center">
                            {{ tournoi.dateInscription is null ? '-' : tournoi.dateInscription|date('d/m/y') }}
                        </td>
                        <td>{{ tournoi.bowling }}</td>
                        <td>{{ tournoi.organisateur }}</td>
                        <td class="text-center">
                            {% if tournoi.finale == TRUE %}
                                <span class="glyphicon glyphicon-ok"></span>
                            {% else %}
                                -
                            {% endif %}
                            /
                            {#                        </td>
                                                    <td class="text-center">
                            #}                            {% if tournoi.finaleJouee == TRUE %}
                                <span class="glyphicon glyphicon-ok"></span>
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td class="text-right">
                            {{ tournoi.journee is not null ? tournoi.journee.moyenne|number_format(2, ',', ' ') : '' }}
                        </td>
                        <td class="text-right">
                            {{ tournoi.classement is null ? '-' : tournoi.classement }}
                            /
                            {{ tournoi.nbJoueursOuEquipes is null ? '-' : tournoi.nbJoueursOuEquipes }}
                        </td>
                    </tr>
                {% endfor %}
                {# Fin tournoi #}
            </tbody>
        </table>
    </div>
    {% include 'app/Resources/views/fragments/ajoutRecord.html.twig' with {'genre': 'm', 'titre': titre, } %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {

            var idBowling = 0;

            $(document).on("dblclick", "tr", function (e) {

                // Id du bowling de la ligne double-cliquée
                idBowling = $(e.target.parentNode).attr("id");
                // reroutage sur le TD qui a été cliqué
                window.location.href = "{{ path(route ~ '-update' ) }}?id=" + idBowling;

                return true;

            });

        });

    </script> 
{% endblock %}