{% extends "src/Livre/Resources/views/layout.html.twig" %}

{% set menu = 'liste' %}
{% set route = 'theme' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ route }}</li>
    <li>Liste des livres</li>
    {% endblock %}

{% block content %}
    <h3>Liste des livres par thème</h3>

    <div class="table-responsive row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <table id="dataTable" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="w3">Libellé</th>
                        <th class="w1">Nb</th>
                        <th class="w9">Livres</th>
                    </tr>
                </thead>
                {% for theme in records %}
                    <tr>
                        <td class="text-right">
                            {{ theme.libelle }}
                        </td>
                           <td class="text-center">
                            {{ theme.livres|length }}
                        </td>
                     <td>
                            {% for livre in theme.livres %}
                                {{ livre.titre }}<br />
                            {% else %}
                                -----
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>

{% endblock %}
