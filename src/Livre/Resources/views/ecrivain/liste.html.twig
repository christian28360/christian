{% extends "src/Livre/Resources/views/layout.html.twig" %}

{% set menu = 'ecrivain' %}
{% set route = 'ecrivain' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ menu }}</li>
    <li>Consultation</li>
    {% endblock %}

{% block content %}
    <h3>Consultation des {{ nbRecords }} écrivains
        <small>
            {% include 'src/Livre/Resources/views/fragments/ajoutRecord.html.twig' with {'genre': 'm'} %}
        </small>
    </h3>

    <div class="table-responsive">
        <table id="dataTable" 
               data-page-locale='FR-fr'
               class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>MàJ</th>
                    <th>Nb liv.</th>
                    <th>Nom - prénom</th>
{#                    <th>Prénom</th>#}
                    <th>Nationalité</th>
                    <th>Remarques</th>
                    <th>Créé le</th>
                    <th>Màj le</th>
                    <th>Supp.</th>
                </tr>
            </thead>
            {% for ecrivain in records %}
                <tr>
                    <td class="text-center w1">
                        <a href="{{ path('livre-' ~ route ~ '-update', {'id' : ecrivain.id} ) }} ) }}"
                           title="Modifier l'enregistrement"
                           alt="Modifier l'enregistrement" >
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </td>
                    <td class="text-center w1">{{ ecrivain.livres|length }}</td>
                    <td class="text-left w5">{{ ecrivain.nom }}, {{ ecrivain.prenom }}</td>
{#                    <td class="text-left">{{ ecrivain.prenom }}</td>#}
                    <td class="text-left">{{ ecrivain.nationalite }}</td>
                    <td class="text-left w2">{{ ecrivain.remarques }}</td>
                    <td class="text-center w1">
                        {% if ecrivain.creeLe is null %}
                            -
                        {% else %}
                            {{ ecrivain.creeLe|date('d/m/Y') }}
                        {% endif %}
                    </td>
                    <td class="text-center w1">
                        {% if ecrivain.modifieLe is null %}
                            -
                        {% else %}
                            {{ ecrivain.modifieLe|date('d/m/Y') }}
                        {% endif %}
                    <td class="text-center w1">
                        <a href="{{ path('livre-' ~ route ~ '-delete', {'id' : ecrivain.id} ) }}"
                           title="Supprimer l'enregistrement">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% include 'src/Livre/Resources/views/fragments/ajoutRecord.html.twig' with {'genre': 'm'} %}

    <div class="modal fade" id="ajout-vehicule" tabindex="-1" role="dialog" aria-labelledby="Recherche d'un véhicule à rajouter dans le parc du site" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>

    <div class="modal fade" id="error-update" tabindex="-1" role="dialog" aria-labelledby="Une erreur est survenue" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Une erreur est survenue</h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
