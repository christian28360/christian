{# Charge et met en forme le formulaire de saisie des livres #}

<div class="form-group  w6">
    {{ form_label(form.nom) }}
    {{ form_errors(form.nom) }}
    {{ form_widget(form.nom, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="form-group  w6">
    {{ form_label(form.prenom) }}
    {{ form_errors(form.prenom) }}
    {{ form_widget(form.prenom, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="form-group  w6">
    {{ form_label(form.nationalite) }}
    {{ form_errors(form.nationalite) }}
    {{ form_widget(form.nationalite, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="form-group  w6">
    {{ form_label(form.remarques) }}
    {{ form_errors(form.remarques) }}
    {{ form_widget(form.remarques, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="col-md-3 form form-inline text-right">
    {{ form_row(form.annuler) }}
    {{ form_row(form.save) }}
    <a href="{{ path('livre-ecrivain') }}">{{ form_row(form.quitter) }}</a>
</div>
