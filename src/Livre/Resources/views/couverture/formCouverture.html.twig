{# Charge et met en forme le formulaire de saisie des couvertures #}

<div class="form-group  w6">
    {{ form_label(form.libelle) }}
    {{ form_errors(form.libelle) }}
    {{ form_widget(form.libelle, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="col-md-3 form form-inline text-right">
    {{ form_row(form.annuler) }}
    {{ form_row(form.save) }}
    <a href="{{ path('livre-couverture') }}">{{ form_row(form.quitter) }}</a>
</div>
