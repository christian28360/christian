{% extends "src/Livre/Resources/views/layout.html.twig" %}

{%set menu = 'couverture' %}
{% set route = 'couverture' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ menu }}</li>
    <li>Ajout</li>
    {% endblock %}

{% block content %}

    {% include 'src/Livre/Resources/views/fragments/titreMode.html.twig' with {'genre': 'f'} %}

    {{ form_start(form, { 'attr': { 'role': 'form' }, 'method': 'post' }) }}

    {{ form_errors(form) }}

    {% include 'src/Livre/Resources/views/couverture/formCouverture.html.twig' %}

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}    
    {{parent()}}
    <script type="text/javascript">
        $(document).ready(function () {
            // Focus sur le premier champ d'input
            $("input:first").focus();
        });
    </script>
{% endblock %}