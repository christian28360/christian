<div class="row row-datetime">
    <div class="col-lg-2 text-right">
        {{ form_label(form.dateDebut) }}
    </div>
    <div class="col-lg-2">
        {#        {{ form_widget(form.dateDebut.date) }}#}
        {{ form_widget(form.dateDebut.date, { 'attr': { 'class': 'form-control datepicker-widget dateDebut' } }) }}
    </div>
    <div class="col-lg-1">
        {{ form_widget(form.dateDebut.time.hour, { 'attr': { 'class': 'form-control changeable' } }) }}
    </div>
    <div class="col-lg-1">
        {{ form_widget(form.dateDebut.time.minute, { 'attr': { 'class': 'form-control changeable' } }) }}
    </div>

    <div class="col-lg-2 text-right">
        {{ form_label(form.dateFin) }}
    </div>
    <div class="col-lg-2">
        {{ form_widget(form.dateFin.date, { 'attr': { 'class': 'form-control datepicker-widget dateFin' } }) }}
    </div>
    <div class="col-lg-1">
        {{ form_widget(form.dateFin.time.hour, { 'attr': { 'class': 'form-control changeable' } }) }}
    </div>
    <div class="col-lg-1">
        {{ form_widget(form.dateFin.time.minute, { 'attr': { 'class': 'form-control changeable' } }) }}
    </div>
</div>

<div class="row">
    {{ form_row(form.voiture, { 'form_type': 'horizontal'}) }}
    {{ form_row(form.distance, { 'form_type': 'horizontal'}) }}
</div>

<div class="row">
    {{ form_row(form.depart, { 'form_type': 'horizontal'}) }}
    {{ form_row(form.destination, { 'form_type': 'horizontal'}) }}
</div>

<div class="row">
    {{ form_row(form.motif, { 'form_type': 'horizontal'}) }}
    {{ form_row(form.accompagnant, { 'form_type': 'horizontal'}) }}
</div>

<div class="row">
        {{ form_row(form.signatureSuperieur, { 'form_type': 'horizontal'}) }}
        {{ form_row(form.signatureValidateur, { 'form_type': 'horizontal'}) }}
</div>

    <div class="row">
{#    <div class="col-lg-6 text-right">#}
        {{ form_row(form.remisage, { 'form_type': 'horizontal'}) }}
{#    </div>#}
{#    <div class="col-lg-6 text-right">#}
{#    </div>#}
</div>

{% if form.user is defined %}
    <div class="row">
        {{ form_row(form.user, { 'form_type': 'horizontal'}) }}
    </div>
{% endif %}

<div class="row">
    <div class="col-xs-8 text-left">
        <a href="#"{#web/doc/modules/GestionReservationAuto/demande_utilisation_vehicule_personnel.pdf }}"#}
           download="demande_utilisation_vehicule_personnel.pdf" target="_blank"
           title="téléchargement du PDF">
            <img src="{{ baseRoutePrefix }}/img/pdf.gif" />
            formulaire de demande d'autorisation d'utilisation d'un véhicule personnel
        </a>
    </div>
