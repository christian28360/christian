<div class="form-group w5">
    {{ form_label(form.name) }}
    {{ form_errors(form.name) }}
    {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
</div>
    
<div class="form-group w5">
    {{ form_errors(form.roles) }}
    {{ form_label(form.roles) }}
</div>
    
<ul class="odd-form-conteneur">
    {% for role in form.roles %}
        {{ include('app/Resources/views/administration/login/prototypes/prototype-role.html.twig', { 'field': role }) }}
    {% endfor %}
</ul>
<div class="row">
    <div class="col-md-11">
        <a href="#"
           id="add-roles"
           class="pull-right"
           data-prototype="
            {% filter escape %}
                {{ include('app/Resources/views/administration/login/prototypes/prototype-role.html.twig', { 'field': form.roles.vars.prototype }) }}
            {% endfilter %}">
            Ajouter un r√¥le
        </a>
    </div>
</div>

<div class="clearfix hgt15"></div>

<div class="form-group pull-right">
    {{ form_widget(form.save) }}
    {{ form_widget(form.roles, { 'attr': { 'class': 'form-control hide' } }) }}
</div>

<div class="clearfix"></div>
    
<hr />